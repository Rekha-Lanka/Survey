<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.delhijal.survey.UpdateSurvey.MainUpdateActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/jalsurveytransparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:textColor="#000089"
            android:gravity="center"
            android:text="Delhi Jal Survey"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:weightSum="3.0"
    android:layout_margin="30dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="0.5"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:text="Survey id :"/>
    <Spinner
        android:id="@+id/spuniqueid"
        android:layout_width="210dp"
        android:layout_marginTop="5dp"
        android:theme="@style/mySpinnerItemStyle"
        android:layout_height="wrap_content" />
</LinearLayout>
    <Button
        android:id="@+id/updatesubmitbtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:text="Submit"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@drawable/custombutton"/>
</LinearLayout>
</LinearLayout>
